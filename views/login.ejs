<!DOCTYPE html>  
<html lang="en">  
  <head>
    <meta charset="utf-8">
    <title>React Test App</title>
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- HTML5 shim, for IE6-8 support of HTML elements -->
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->
    <!-- styles -->
    <link href='https://fonts.googleapis.com/css?family=Source+Sans+Pro:400,300,600,700,900' rel='stylesheet' type='text/css'>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.0/jquery.min.js"></script>
    <script>
      var login = function() {
        var email = document.getElementById("email").value;
        var password = document.getElementById("password").value;
        console.log(email + password)
        $.ajax({
          type: "POST",
          url: "http://localhost:3000/api/user",
          data: {name:null,username:null,email:email,password:password},
          success: function(result) {
            var id = result._id;
            window.location.replace("http://localhost:3000/" + id);
          }
        });
      }
    </script>
    <link href="stylesheets/style.css" rel="stylesheet">
  </head>
  <body>
    <div id="login-container">
      <div class="largeLogo semiBold">huntr</div>
      <div class="subTitle light">keep track of your job applications</div>
      <form action="" class="newJobForm" style="padding-top:50px" onsubmit="return login()">
        <input id="email" type="text" placeholder="Email" class="textField regularSize"/><br>
        <input id="password" type="text" placeholder="Password" class="textField regularSize"/><br>
        <input class="submitButton regularSize" type="submit" value="Signup/Login"/>
      </form>
      <div class="screenshotContainer">
        <img src="/images/screenshot.png" width="600">
      </div>
    </div>
  </body>
</html>
